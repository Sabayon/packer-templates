{
  "builders": [
    {
      "boot_command": [
        "<down><down><down>",
        "<enter>",
	"<enter>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
	"useradd -m -s /bin/bash {{user `username`}}",
	"<enter>",
	"<wait>",	
        "passwd {{user `username`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
        "{{user `password`}}",
        "<enter>",
        "<wait>",
 	"passwd {{user `root_username`}}",
        "<enter>",
        "<wait>",
        "{{user `root_password`}}",
        "<enter>",
        "<wait>",
        "{{user `root_password`}}",
        "<enter>",
        "<wait>",
	"gpasswd -a {{user `username`}} wheel",
	"<enter>",
	"<wait>",
	"equo up && echo 3 | equo i openssh app-admin/sudo",
	"<enter>",
	"<wait10>",
	"<wait10>",
	"<wait10>",
	"<wait10>",
        "<wait10>",
	"echo '{{user `username`}} ALL=(ALL) NOPASSWD: ALL' >> /etc/sudoers.d/{{user `username`}}",
	"<enter>",
	"<wait>",
	"sed -i -e 's/UsePAM yes/UsePAM no/g' /etc/ssh/sshd_config",
	"<enter>",
	"echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config",
	"<enter>",
	"sed -i -e 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config",
	"<enter>",
	"su {{user `username`}} -c 'mkdir -p /home/{{user `username`}}/.ssh;chmod 0700 /home/{{user `username`}}/.ssh'",
	"<enter>",
	"su {{user `username`}} -c 'wget {{user `vagrant_pubkey_url`}} -O /home/{{user `username`}}/.ssh/authorized_keys; chmod 0600 /home/{{user `username`}}/.ssh/authorized_keys'",
	"<enter>",
	"<wait10>",
        "systemctl start sshd",
        "<enter>",
        "<wait10>",
	"<wait10>"
      ],
      "boot_wait": "5s",
      "disk_size": 60000,
      "guest_additions_mode": "disable",
      "guest_os_type": "Gentoo_64",
      "headless": false,
      "iso_url": "http://na.mirror.garr.it/mirrors/sabayonlinux/iso/{{user `build_type`}}/Sabayon_Linux_{{user `build`}}_amd64_SpinBase.iso",
      "iso_checksum_type": "none",
      "shutdown_command": "shutdown -hP now",
      "ssh_password": "{{user `root_password`}}",
      "ssh_username": "{{user `root_username`}}",
      "ssh_wait_timeout": "20s",
      "type": "virtualbox-iso",
      "vm_name": "Sabayon SpinBase"
    }
  ],
  "description": "Sabayon Virtualbox Image",
  "post-processors": [
    {
      "output": "sabayon-amd64-spinbase-virtualbox.box",
      "type": "vagrant"
    },
     {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "Sabayon/spinbase-amd64",
        "artifact_type": "vagrant.box",
        "metadata": {
          "created_at": "{{timestamp}}"
       }
     },
     {
        "type": "atlas",
        "token": "{{user `atlas_token`}}",
        "artifact": "Sabayon/spinbase-amd64",
        "artifact_type": "virtualbox.image",
        "metadata": {
          "created_at": "{{timestamp}}"
       }
     }

  ],
  "variables": {
    "atlas_token" : "{{env `ATLAS_TOKEN`}}",
    "root_username": "root",
    "root_password": "root",
    "password": "vagrant",
    "build": "DAILY",
    "build_type": "daily",
    "username": "vagrant",
    "vagrant_pubkey_url": "https://raw.githubusercontent.com/mitchellh/vagrant/master/keys/vagrant.pub"
  }
}

